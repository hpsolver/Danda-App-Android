<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:fontFamily="@font/montserratmedium"
              android:textColor="@color/colorPrimaryDark"
              android:id="@+id/textViewName"
              android:layout_marginTop="@dimen/dp_eight"
              android:textSize="@dimen/sp_sixteen"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:fontFamily="@font/montserratregular"
              android:textColor="@color/colorPrimaryDark"
              android:layout_marginTop="@dimen/dp_sixteen"
              android:layout_marginLeft="@dimen/dp_sixteen"
              android:layout_marginRight="@dimen/dp_eight"
              android:text="They won't be able to find\nyour profile, posts or story on\nDanda. Danda won't let\nthem know you blocked them."
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:layout_marginTop="@dimen/dp_eight"
                  android:background="@color/colorLightGrey"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="@string/block"
            android:id="@+id/tvBlock"

            android:gravity="center"
            android:padding="@dimen/dp_eight"
            android:fontFamily="@font/montserratmedium"
            android:textSize="@dimen/sp_sixteen"
            android:textColor="@color/colorBlue"
            android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_1"
                  android:background="@color/colorLightGrey"></LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="@string/cancel"
            android:id="@+id/tvBlockCancel"
            android:gravity="center"
            android:padding="@dimen/dp_eight"
            android:fontFamily="@font/montserratregular"
            android:textSize="@dimen/sp_sixteen"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>


</LinearLayout>