<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="@dimen/dp_thirty_two"
                android:layout_height="@dimen/dp_thirty_two"
                android:src="@drawable/ic_icon_avatar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_four"
                android:layout_toEndOf="@+id/imageViewProfile"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>

        <EditText
            android:id="@+id/tvCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/rounded_blank"
            android:fontFamily="@font/montserratregular"
            android:gravity="start"
            android:hint="Say something about this..."
            android:minHeight="@dimen/_120sdp"
            android:padding="@dimen/dp_twelve"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_marginBottom="@dimen/_16sdp"
            android:id="@+id/textViewShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_thirty_two"
            android:background="@drawable/button_effect"
            android:fontFamily="@font/montserratmedium"
            android:gravity="end"
            android:padding="@dimen/dp_twelve"
            android:text="Share Now"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>