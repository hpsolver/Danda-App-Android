<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewProfile"
            android:src="@drawable/ic_icon_avatar"
            android:layout_marginTop="@dimen/dp_sixteen"
            android:layout_width="@dimen/dp_seventy_two"
            android:layout_height="@dimen/dp_seventy_two"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_twenty_four"
            android:fontFamily="@font/montserratregular"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@+id/tvMessage"
            android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/dp_twenty_four"
                  android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/cancel"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:id="@+id/tvCancel"
                android:padding="@dimen/dp_eight"
                android:gravity="center"
                android:background="@null"
                android:textAllCaps="false"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="@dimen/dp_1"
                android:background="@color/colorLightGrey"
                android:layout_height="match_parent"></LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/str_unfollow"
                android:layout_width="0dp"
                android:gravity="center"
                android:id="@+id/tvUnfollow"
                android:padding="@dimen/dp_eight"
                android:layout_weight=".1"
                android:background="@null"
                android:textAllCaps="false"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>